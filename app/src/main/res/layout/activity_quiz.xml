<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizActivity">

    <TextView
            android:text="Correct: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorrect_QuizActivity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textColor="@color/black" />

    <TextView
            android:text="Wrong: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWrong_QuizActivity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="304dp"
            android:textSize="20sp"
            android:textColor="@color/black" />

    <TextView
            android:text="Wrong: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmpty_QuizActivity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tvCorrect_QuizActivity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tvWrong_QuizActivity" />

    <TextView
            android:text="Question:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuestion_QuizActivity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toEndOf="@+id/tvCorrect_QuizActivity"
            app:layout_constraintEnd_toStartOf="@+id/tvWrong_QuizActivity"
            android:textStyle="bold" />

    <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivFlag_QuizActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion_QuizActivity" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFlag_QuizActivity">

        <Button
                android:text="Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnA_QuizActivity"
                android:textSize="24sp" />

        <Button
                android:text="Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnB_QuizActivity"
                android:textSize="24sp" />

        <Button
                android:text="Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnC_QuizActivity"
                android:textSize="24sp" />

        <Button
                android:text="Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnD_QuizActivity"
                android:textSize="24sp" />
    </LinearLayout>

    <ImageView
            android:layout_width="77dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"
            android:id="@+id/ivNext_QuziActivity"
            tools:layout_editor_absoluteY="530dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>