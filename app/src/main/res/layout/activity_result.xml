<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="Total Correct Answer: 7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalCorrect_ResultActivity"
            android:textSize="30sp"
            android:textColor="#649600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" />

    <TextView
            android:text="Total Wrong Answer: 7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalWrong_ResultActivity"
            android:textSize="30sp"
            android:textColor="#FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalCorrect_ResultActivity" />

    <TextView
            android:text="Total Empty Answer: 7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalEmpty_ResultActivity"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalWrong_ResultActivity" />

    <TextView
            android:text="Success Rate: 80%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSuccessRate_ResultActivity"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalEmpty_ResultActivity" />

    <Button
            android:text="Play Again"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlayAgain_aResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="187dp" />

    <Button
            android:text="Quit Game"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnQuit_aResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayAgain_aResult" />

</androidx.constraintlayout.widget.ConstraintLayout>